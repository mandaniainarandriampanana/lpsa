
{% extends "base_admin.html.twig" %}

{% trans_default_domain "LpsaAppBundle" %}

{% block content %}
    <div class="row">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">EvenementCatégorie</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Edition
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12"><ul class="nav nav-pills">
                            <ul class="nav nav-pills">
                                <li>
                                    <a href="{{ path('evenementcategorie_index') }}" class="btn btn-default" style="padding: 6px 12px;"><i class="fa fa-mail-reply"></i> {{ 'form.back'|trans }}</a>
                                </li>
                                <li>
                                    {{ form_start(deleteForm) }}
                                    <button class="btn btn-default evenementCategorie-delete"><i class="fa fa-trash-o"></i> {{ 'form.delete'|trans }}</button>
                                    {{ form_end(deleteForm) }}
                                </li>
                            </ul>
                            <br>
                        </div>
                        <div class="col-lg-12">
                            {{ form_start(editForm) }}
                                {{ form_widget(editForm) }}
                                <input type="submit" value="{{ 'form.update'|trans }}" class="btn btn-default" />
                            {{ form_end(editForm) }}                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block others_javascripts %}
    <script>
        $(document).ready(function(){
            $(document).on('click','.evenementCategorie-delete',function(e){
                e.preventDefault();
                var r = confirm("{% trans %}Etes-vous sûr de vouloir supprimer?{% endtrans %}");
                if (r == true) {
                    $(this).parent().submit();//submit
                } else {
                    return false;
                }
            });
        });
    </script>
{% endblock %}
