{% trans_default_domain "LpsaAppBundle" %}

{% if objectifLtirTrir.id is not null %}
    {% set deleteClassSelector = 'objectifltirtrir' %}
{% endif %}

{% extends "LpsaAppBundle:Layout:newEdit.html.twig" %}

{% block crud_header_title %}
    {{ 'objectifltirtrir.crud_header_title'|trans }}
{% endblock %}
{% block crud_panel_title %}{% if objectifLtirTrir.id is not null %}{{ 'objectifltirtrir.crud_panel_title.edit'|trans }}{% else %}{{ 'objectifltirtrir.crud_panel_title.new'|trans }}{% endif %}{% endblock %} 
{% block crud_panel_nav %}
    {% if objectifLtirTrir.id is not null %}
    <ul class="nav nav-pills">
        <li>
            <a href="{{ path('objectifltirtrir_index') }}" class="btn btn-default" style="padding: 6px 12px;"><i class="fa fa-mail-reply"></i> {{ 'form.back'|trans }}</a>
        </li>
        <li>
            <a href="{{ path('objectifltirtrir_delete',{'id': objectifLtirTrir.id }) }}" class="btn btn-default objectifltirtrir-delete" style="padding: 6px 12px;"><i class="fa fa-trash-o"></i> {{ 'form.delete'|trans }}</a>
        </li>
    </ul>
    {% endif %}
{% endblock %}
{% block crud_panel_content %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="{% if objectifLtirTrir.id is not null %}{{ 'form.update'|trans }}{% else %}{{ 'form.add'|trans }}{% endif %}" class="btn btn-default" />
    {{ form_end(form) }}    
{% endblock %} 
{% block others_javascripts %}
    <script>src="{{ asset('bundles/lpsaapp/js/app.js') }}"</script>
    <script>
        $(document).ready(function () {
            $(document).on('click', '.objectifltirtrir-delete', function (e) {
                var r = confirm("{{ 'whishes.delete'|trans }}");
                if (r !== true) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
{% endblock %}