{% extends "base_admin.html.twig" %}

{% trans_default_domain "LpsaAppBundle" %}
{% block content %}
    <div class="row">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ message|trans({}, 'LpsaAppBundle') }}
            </div>
        {% endfor %}
    {% endfor %}
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'depotcategorie.page_header'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ 'depotcategorie.panel_heading'|trans }}
                </div>
                <div style="float: right" class="btn-action">
                    <a class="btn btn-default" href="{{ path('admin_depotcategorie_new') }}">{{ 'depotcategorie.crud_panel_title.new' |trans }}</a>
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-depotcategorie">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>{{ 'depotcategorie.table.label'|trans }}</th>
                                <th>{{ 'depotcategorie.table.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for depotCategorie in depotCategories %}
                                <tr>
                                    <td class="id-td"><a href="{{ path('admin_depotcategorie_edit',{'id' : depotCategorie.id }) }}" title="{{ 'form.edit'|trans }}">{{ depotCategorie.id }}</a></td>
                                    <td>{{ depotCategorie.libelle }}</td>
                                    <td class="btn-action-table"> 
                                        <div class="btn-content">
                                        <a href="{{ path('admin_depotcategorie_edit', { 'id': depotCategorie.id }) }}" class="btn btn-default left"><i class="fa fa-edit"></i></a>
                                        <a href="{{ path('admin_depotcategorie_delete', { 'id': depotCategorie.id }) }}" class="btn btn-default left depotcategorie-delete"><i class="fa fa-trash-o"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block others_stylesheets %}
    {{ parent() }}
    <style>
        .left{
            float: left;
        }
    </style>
{% endblock %}

{% block others_javascripts %}
    <script>
        $(document).ready(function(){
            $(document).on('click','.depotcategorie-delete',function(e){
                var r = confirm("{{ 'whishes.delete'|trans }}");
                if (r !== true) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
{% endblock %}
