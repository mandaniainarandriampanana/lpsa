{% trans_default_domain "LpsaAppBundle" %}

{% if materiel.id is not null %}
    {% set deleteClassSelector = 'materiel' %}
{% endif %}

{% extends "LpsaAppBundle:Layout:newEdit.html.twig" %}

{% block crud_header_title %}
    {{ 'materiel.crud_header_title'|trans }}
{% endblock %}
{% block crud_panel_title %}
    {% if materiel.id is not null %}
        {{ 'materiel.crud_panel_title.edit'|trans }}
            {% else %}
        {{ 'materiel.crud_panel_title.new'|trans }}
    {% endif %}
{% endblock %}
{% block crud_panel_nav %}
    {% if materiel.id is not null %}
    <ul class="nav nav-pills">
        <li>
            <a href="{{ path('materiel_index') }}" class="btn btn-default" style="padding: 6px 12px;"><i class="fa fa-mail-reply"></i> {{ 'form.back'|trans }}</a>
        </li>
        <li>
            <a href="{{ path('materiel_delete',{'id': materiel.id }) }}" class="btn btn-default materiel-delete" style="padding: 6px 12px;"><i class="fa fa-trash-o"></i> {{ 'form.delete'|trans }}</a>
        </li>
    </ul>
    {% endif %}
{% endblock %}
{% block crud_panel_content %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div>
            {% if materiel.id is not null %}
            <input type="submit" value="{{ 'form.update'|trans }}" class="btn btn-default" />
            {% else %}
            <input type="submit" value="{{ 'form.add'|trans }}" class="btn btn-default" />
            {% endif %}
        </div>
    {{ form_end(form) }} 
{% endblock %}  