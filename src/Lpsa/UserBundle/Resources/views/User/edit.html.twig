{% extends "base_admin.html.twig" %}
{% trans_default_domain "FOSUserBundle" %}
{% form_theme edit_form 'LpsaAppBundle:Form:custom_type.html.twig' %}
{% block content %}
    <div class="row">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Utilisateurs</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Edition
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12"><ul class="nav nav-pills">
                            <ul class="nav nav-pills">
                                <li>
                                    <a href="{{ path('lpsa_user_admin_index') }}" class="btn btn-default" style="padding: 6px 12px;"><i class="fa fa-mail-reply"></i> {{ 'form.back'|trans }}</a>
                                </li>
                                <li>
                                    {{ form_start(delete_form) }}
                                    <button class="btn btn-default" style="padding: 6px 12px;"><i class="fa fa-trash-o"></i> {{ 'form.delete'|trans }}</button>
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>
                            <br>
                        </div>
                        <div class="col-lg-12">
                            {{ form_start(edit_form) }}
                                {{ form_widget(edit_form) }}
                                <div class="col-lg-6">
                                <input type="submit" value="{{ 'form.update'|trans }}" class="btn btn-default" />
                                </div>
                                <div class="col-lg-6">
                                    <a href="{{ path('lpsa_admin_user_change_password', {'id' : user.id }) }}" class="btn btn-default">{{ 'form.adminchangepwd'|trans }}</a>
                                </div>
                            {{ form_end(edit_form) }}                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block others_javascripts %}
</script> 
    {{ parent() }}
    <script src="{{ asset('bundles/lpsauser/js/register.js') }}"></script>
{% endblock %}
