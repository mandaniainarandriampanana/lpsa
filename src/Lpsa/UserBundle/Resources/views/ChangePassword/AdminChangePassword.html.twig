{% extends "base_admin.html.twig" %}

{% block content %}
    <div class="row">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Utilisateur</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        
            <div class="col-lg-6"><center>Nom:{{ user.username }}</center></div>
            <div class="col-lg-6"><center>Email:{{ user.email }}</center></div>
    </div>
        <div class="panel-body">
            <div class="row">
                <form action="{{ path('lpsa_admin_user_change_password', { 'id': user.id }) }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                    {{ form_widget(form) }}
                    <div>
                        <input class="btn brn-default" type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
                    </div>
                </form>
            </div>
        </div>
{% endblock %}