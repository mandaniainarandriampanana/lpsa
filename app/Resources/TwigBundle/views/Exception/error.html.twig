{% extends 'base.html.twig' %}

{% trans_default_domain "LpsaAppBundle" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/lpsaapp/css/style.css') }}" />
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-body">
                    <div class="logo-app">
                        <img src="{{ asset('bundles/lpsauser/img/logo-login.png') }}"/>
                    </div>
                    <div class="error-block">
                        <div class="error-title"> <h1>{{ 'errors.other.h1'|trans }}</h1></div>
                        <div class="error-description">  
                            <p>
                                {{ 'errors.other.description'|trans }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>

{% endblock %}
